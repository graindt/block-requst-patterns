{
    "manifest_version": 3,
    "name": "BlockRequests",
    "version": "2.0",
    "description": "Block requests based on patterns.",
    "background": {
        "service_worker": "stop.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "webRequest",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_title": "Block Requests",
        "default_popup": "settings.html"
    }
}
